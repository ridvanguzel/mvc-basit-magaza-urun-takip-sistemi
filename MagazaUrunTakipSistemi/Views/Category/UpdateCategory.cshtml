@using MagazaUrunTakipSistemi.Models.Entity;
@model TBL_KATEGORI

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<h2 class="mt-3">Update Category</h2>


@using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post, new { @class = "form-group" }))
{

    @Html.HiddenFor(x => x.id, new { @class = "form-control" })
    <label>Category Name : </label>
    @Html.TextBoxFor(x => x.kategoriad, new { @class = "form-control" })

    <button class="mt-5 btn btn-success" style="margin-top:16px">UPDATE CATEGORY</button>



}