@using MagazaUrunTakipSistemi.Models.Entity;
@model List<TBL_KATEGORI>
@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mt-3">Kategoriler </h2>

<table class="table table-bordered">


    <thead>
        <tr>
            <th>CATEGORY ID</th>
            <th>CATEGORY NAME</th>
            <th>STATUS</th>
            <th>DELETE</th>
            <th>ACTIVE</th>
            <th>UPDATE</th>
        </tr>
    </thead>

    <tbody>

        @foreach(var item in Model)
        { 
        <tr>
            <td>@item.id</td>
            <td>@item.kategoriad</td>
            <td>@item.status</td>
            <td><a href="/Category/DeleteCategory/@item.id" class="btn btn-danger">DELETE</a></td>
            <td><a href="/Category/ActiveCategory/@item.id" class="btn btn-success">ACTIVE</a></td>
            <td><a href="/Category/UpdateCategory/@item.id" class="btn btn-warning">UPDATE</a></td>

        </tr>
        }
    </tbody>



</table>

<a href="/Category/NewCategory" class="btn btn-success">ADD NEW CATEGORY</a> 

